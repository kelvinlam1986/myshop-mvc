@model CategoryDTO

 <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Thêm danh mục mới</h3>
            </div>
            <div class="box-body">
                <form method="post" asp-controller="Category" id="formAddCategory"
                    asp-action="Index"
                     enctype="multipart/form-data">
                     <div asp-validation-summary="All" class="text-danger"></div>
                     <div class="form-group">
                        <label for="date">Danh mục</label>
                        <div class="input-group col-md-12">
                            <input type="text" class="form-control pull-right" 
                                id="date" asp-for="Name" placeholder="Danh mục" 
                                required>
                            <span asp-validation-for="Name" class="text-danger"></span> 
                        </div><!-- /.input group -->
                  </div><!-- /.form group -->
                  <div class="form-group">
                    <div class="input-group">
                      <button type="submit" class="btn btn-primary" 
                            id="daterange-btn" name="">
                        Lưu lại
                      </button>
                      &nbsp;
					            <button class="btn" type="reset" id="daterange-btn">
                        Reset
                      </button>
                    </div>
                  </div><!-- /.form group -->
                </form>
            </div><!-- /.box-body -->
        </div><!-- /.box -->