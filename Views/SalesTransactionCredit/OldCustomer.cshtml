@model SearchCustomerDTO

@{
    ViewData["Title"] = "Khách hàng tồn tại | Shop";
    var customers = ViewData["Customers"] as IEnumerable<SearchCustomerDTO>;
}

@section contentHeader {
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            <a class="btn btn-success"
            asp-controller="Home" asp-action="Index">Trở về</a>
        </h1>
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index">
                <i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Khách hàng</li>
        </ol>
    </section>
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">Khách hàng tồn tại</h3>
                <hr>
            </div>
            <div class="box-body">
                <form method="post" asp-controller="SalesTransactionCredit"
                    asp-action="CustomerAccount"
                    enctype="multipart/form-data">
                    <div class="form-group col-lg-offset-4">
                        <label for="date">Tìm theo tên khách hàng</label>
                        <div class="input-group col-md-6">
                            <select class="form-control select2" 
                                style="width: 100%;" asp-for="Model.Id">
                                @foreach (var item in customers)
                                {
                                    <option value="@item.Id">@item.LastName @item.FirstName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-lg-offset-4">
                        <div class="input-group">
                        <button class="btn btn-lg btn-primary" id="daterange-btn" name="">
                            Tìm kiếm
                        </button>
                        </div>
                  </div><!-- /.form group -->
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        //Initialize Select2 Elements
        $(".select2").select2();
    </script>
}