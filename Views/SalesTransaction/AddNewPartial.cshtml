@model CustomerDTO

<div class="row">
 <div class="col-md-8">
     <div class="box box-primary">
         <div class="box-header with-border">
            <h3 class="box-title">Thêm mới khách hàng</h3>
        </div>
         <form id="formNewCustomer" method="post" asp-controller="Customer" role="form" asp-action="AddCustomer">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-12">
                         <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group col-md-6">
                            <label class="control-label">Họ</label>
                            <input type="text" class="form-control pull-right" id="lastname" 
                                    asp-for="LastName" placeholder="Họ" required> <br>
                            <span asp-validation-for="LastName" class="text-danger"></span> 
                        </div><!-- /.form group -->
                        <div class="form-group col-md-6">
                            <label asp-for="FirstName" class="control-label">Tên</label>
                            <input type="text" class="form-control pull-right" id="firstname" 
                                    asp-for="FirstName" placeholder="Tên" required> <br>
                            <span asp-validation-for="FirstName" class="text-danger"></span> 
                        </div><!-- /.form group -->
                        <div class="form-group col-md-12">
                            <label for="address" asp-for="Address" class="control-label">Địa chỉ</label>   
                            <textarea class="form-control pull-right" id="address" asp-for="Address"
                                    placeholder="Địa chỉ" required></textarea> <br>
                            <span asp-validation-for="Address" class="text-danger"></span> 
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Contact" class="control-label">Điện thoại</label>
                            <input type="text" class="form-control pull-right" id="contact" 
                                asp-for="Contact" placeholder="Điện thoại" required> <br>
                            <span asp-validation-for="Contact" class="text-danger"></span> 
                        </div>  
                    </div>
                </div>
            </div>
            <div class="box-footer" align="right" > 
                <a class="btn btn-success" asp-controller="Customer" asp-action="Index">Trở về</a>
                <button class="btn btn-primary" 
                    id="daterange-btn" name="">Tiếp tục</button>
            </div>
        </form>
     </div>
 </div>